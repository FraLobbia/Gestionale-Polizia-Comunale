@model IEnumerable<GestionalePoliziaComunale.Models.Violazione>

@{
    ViewBag.Title = "Violazioni";
}

<h1>Elenco Violazioni</h1>

 @Html.ActionLink("Aggiungi una nuova violazione", "Create", null, new { @class = "btn btn-success" })

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descrizione)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descrizione)
            </td>
            <td>
                @Html.ActionLink("Modifica", "Edit", new { id = item.id_Violazione }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Dettagli", "Details", new { id = item.id_Violazione }, new { @class = "btn btn-secondary" }) 
                @Html.ActionLink("Cancella", "Delete", new { id = item.id_Violazione }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
